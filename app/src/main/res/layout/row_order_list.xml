<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_orderlist_cvContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/ivOrder"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerVertical="true"
                android:padding="@dimen/_3sdp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp">


                    <com.summit.service.customecomponent.CustomTextView
                        android:id="@+id/row_orderlist_tvOrderIdLbl"
                        style="@style/ganaral_greystyle"
                        android:layout_centerVertical="true"
                        android:paddingStart="@dimen/_5sdp"
                        android:text="@string/order"
                        app:font_name="UBUNTU-MEDIUM.TTF" />


                    <com.summit.service.customecomponent.CustomTextView
                        android:id="@+id/row_orderlist_tvOrderId"
                        style="@style/ganaral_primarystyle"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/row_orderlist_tvOrderIdLbl"
                        android:paddingStart="@dimen/_2sdp"
                        android:textSize="@dimen/_13sdp"
                        app:font_name="UBUNTU-MEDIUM.TTF" />

                    <com.summit.service.customecomponent.CustomTextView
                        android:id="@+id/row_orderlist_tvDate"
                        style="@style/ganaral_greystyle"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:paddingEnd="@dimen/_5sdp"
                        app:font_name="UBUNTU-MEDIUM.TTF" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_5sdp">


                    <com.summit.service.customecomponent.CustomTextView
                        android:id="@+id/row_orderlist_tvStatus"
                        style="@style/ganaral_greystyle"
                        android:layout_centerVertical="true"
                        android:paddingStart="@dimen/_5sdp"
                        android:text="@string/shipped"
                        app:font_name="UBUNTU-MEDIUM.TTF" />

                    <com.summit.service.customecomponent.CustomTextView
                        android:id="@+id/row_orderlist_tvTime"
                        style="@style/ganaral_greystyle"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:paddingEnd="@dimen/_5sdp"
                        app:font_name="UBUNTU-MEDIUM.TTF" />


                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@color/color_gray_light"></View>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:padding="@dimen/_5sdp">

            <com.summit.service.customecomponent.CustomTextView
                android:id="@+id/row_orderlist_tvProName"
                style="@style/ganaral_greystyle"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingStart="@dimen/_5sdp"
                app:font_name="UBUNTU-BOLD.TTF" />


            <com.summit.service.customecomponent.CustomTextView
                android:id="@+id/row_orderlist_tvKg"
                style="@style/ganaral_greystyle"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                app:font_name="UBUNTU-BOLD.TTF" />


            <com.summit.service.customecomponent.CustomTextView
                android:id="@+id/row_orderlist_tvPrice"
                style="@style/ganaral_greystyle"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_5sdp"
                android:paddingStart="@dimen/_5sdp"
                app:font_name="UBUNTU-BOLD.TTF" />


        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>



