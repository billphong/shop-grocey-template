<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_notification_list_cvContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/_3sdp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:src="@drawable/ic_not_basket" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:padding="@dimen/_7sdp"
            android:orientation="vertical">

            <com.grocery.service.customecomponent.CustomTextView
                android:id="@+id/row_notification_list_tvName"
                style="@style/ganaral_greystyle"
                app:font_name="UBUNTU-BOLD.TTF" />

            <com.grocery.service.customecomponent.CustomTextView
                android:id="@+id/row_notification_list_tvDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp"
                android:textColor="@color/signup_lable_color"
                android:textSize="@dimen/_11sdp"
                app:font_name="UBUNTU-MEDIUM.TTF" />


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>

