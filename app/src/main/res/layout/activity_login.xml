<?xml version="1.0" encoding="utf-8"?>
<com.grocery.service.comman.SlidingLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fb="http://schemas.android.com/tools"
    android:id="@+id/activity_login_llContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/ic_logo_login" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_25sdp"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:orientation="vertical">


                <com.grocery.service.customecomponent.CustomEdittext
                    android:id="@+id/activity_login_etEmail"
                    style="@style/register_edittext"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    app:font_name="UBUNTU-MEDIUM.TTF" />

                <com.grocery.service.customecomponent.CustomEdittext
                    android:id="@+id/activity_login_etPassword"
                    style="@style/register_edittext"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    app:font_name="UBUNTU-MEDIUM.TTF" />


                <RelativeLayout
                    android:id="@+id/activity_login_rlLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/login_shape"
                    android:padding="@dimen/_8sdp">


                    <com.grocery.service.customecomponent.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_vertical"
                        android:text="@string/log_in"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        app:font_name="UBUNTU-MEDIUM.TTF" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <com.grocery.service.customecomponent.CustomTextView
                        android:id="@+id/activity_login_tvForgotPassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/forgot_psw"
                        android:textColor="@color/font_sign_text_grey"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="UBUNTU-MEDIUM.TTF" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:background="@color/font_sign_text_grey" />

                </LinearLayout>

                <com.grocery.service.customecomponent.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:text="@string/or_login_with"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_14sdp"
                    app:font_name="UBUNTU-MEDIUM.TTF" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/activity_login_ivFacebook"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                       android:layout_marginEnd="@dimen/_3sdp"
                        android:background="@drawable/ic_facebook" />

                    <ImageView
                        android:id="@+id/activity_login_ivGoogle"
                        android:layout_width="@dimen/_42sdp"
                        android:layout_height="@dimen/_42sdp"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:background="@drawable/ic_google" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/activity_login_llForgot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">


                    <com.grocery.service.customecomponent.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/new_here"
                        android:textColor="@color/signup_lable_color"
                        android:textSize="@dimen/_14sdp"
                        app:font_name="UBUNTU-MEDIUM.TTF" />

                    <com.grocery.service.customecomponent.CustomTextView
                        android:id="@+id/activity_login_tvSignUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/sign_up"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_14sdp"
                        app:font_name="UBUNTU-BOLD.TTF" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</com.grocery.service.comman.SlidingLinearLayout>