<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/llHeader"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/bg_slidemenu"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:id="@+id/row_header_rlProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/_20sdp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/row_header_ivProfile"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
           android:layout_centerInParent="true"
            android:src="@drawable/us_icon"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/row_header_ivProfile"
            android:layout_marginTop="@dimen/_55sdp"
            android:src="@drawable/ic_edit" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/_10sdp"
        android:orientation="vertical">


        <com.summit.service.customecomponent.CustomTextView
            android:id="@+id/row_header_nameProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="@string/lio_jorge"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            app:font_name="UBUNTU-BOLD.TTF" />

        <com.summit.service.customecomponent.CustomTextView
            android:id="@+id/row_header_emailProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lio_jorge_gmail_com"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            app:font_name="UBUNTU-MEDIUM.TTF" />


    </LinearLayout>


</LinearLayout>
