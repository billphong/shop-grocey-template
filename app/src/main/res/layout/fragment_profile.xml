<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_145sdp"
                android:background="@drawable/bg_slidemenu"
                android:orientation="vertical">


                <com.grocery.service.customecomponent.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/app_name_new"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_22sdp" />


            </RelativeLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fragment_profile_ivProfilePic"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_minus45sdp"
                android:src="@drawable/us_icon"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="@dimen/_1sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">


                <android.support.v7.widget.CardView
                    style="@style/profile_cardview"
                    app:cardCornerRadius="@dimen/_5sdp">


                    <com.grocery.service.customecomponent.CustomTextView
                        android:id="@+id/fragment_profile_tvName"
                        style="@style/profile_textview"
                        app:font_name="UBUNTU-BOLD.TTF" />


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    style="@style/profile_cardview"
                    app:cardCornerRadius="@dimen/_5sdp">


                    <com.grocery.service.customecomponent.CustomTextView
                        android:id="@+id/fragment_profile_tvEmail"
                        style="@style/profile_textview"
                        app:font_name="UBUNTU-BOLD.TTF" />


                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    style="@style/profile_cardview"
                    app:cardCornerRadius="@dimen/_5sdp">


                    <com.grocery.service.customecomponent.CustomTextView
                        android:id="@+id/fragment_profile_tvPhone"
                        style="@style/profile_textview"
                        app:font_name="UBUNTU-BOLD.TTF" />


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    style="@style/profile_cardview"
                    app:cardCornerRadius="@dimen/_5sdp">


                    <com.grocery.service.customecomponent.CustomTextView
                        android:id="@+id/fragment_profile_tvAddress"
                        style="@style/profile_textview"
                        app:font_name="UBUNTU-BOLD.TTF" />


                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</LinearLayout>