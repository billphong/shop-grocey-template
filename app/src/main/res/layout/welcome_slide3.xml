<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/iv_intro_onw" />


        <com.summit.cherrity.customecomponent.CustomTextView
            android:id="@+id/tvTitleThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingStart="@dimen/_10sdp"
            android:text="@string/slide_3_title"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_17sdp"
            app:font_name="UBUNTU-BOLD.TTF" />

        <com.summit.cherrity.customecomponent.CustomTextView
            android:id="@+id/tvDesThree"
            style="@style/ganaral_greystyle"
            android:maxLines="2"
            android:layout_gravity="center"
            android:paddingEnd="@dimen/_30sdp"
            android:paddingStart="@dimen/_30sdp"
            android:paddingTop="@dimen/_3sdp"
            android:text="@string/slide_3_desc"
            android:textAlignment="center"
            app:font_name="UBUNTU-MEDIUM.TTF" />


    </LinearLayout>


</RelativeLayout>