<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_addresslist_cvContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:clickable="true"
    android:focusable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.summit.cherrity.customecomponent.CustomTextView
                    style="@style/ganaral_greystyle"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ivOrder"
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/name"
                    app:font_name="UBUNTU-MEDIUM.TTF" />


                <com.summit.cherrity.customecomponent.CustomTextView
                    android:id="@+id/row_addresslist_tvName"
                    style="@style/ganaral_greystyle"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ivOrder"
                    android:paddingStart="@dimen/_5sdp"
                    app:font_name="UBUNTU-MEDIUM.TTF" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="horizontal">


                <com.summit.cherrity.customecomponent.CustomTextView
                    style="@style/ganaral_greystyle"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ivOrder"
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/mobile_no"
                    app:font_name="UBUNTU-MEDIUM.TTF" />


                <com.summit.cherrity.customecomponent.CustomTextView
                    android:id="@+id/row_addresslist_tvMobile"
                    style="@style/ganaral_greystyle"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ivOrder"
                    android:paddingStart="@dimen/_5sdp"
                    app:font_name="UBUNTU-MEDIUM.TTF" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="horizontal">


                <com.summit.cherrity.customecomponent.CustomTextView
                    style="@style/ganaral_greystyle"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ivOrder"
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/pincode"
                    app:font_name="UBUNTU-MEDIUM.TTF" />


                <com.summit.cherrity.customecomponent.CustomTextView
                    android:id="@+id/row_addresslist_tvPincode"
                    style="@style/ganaral_greystyle"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ivOrder"
                    android:paddingStart="@dimen/_5sdp"
                    app:font_name="UBUNTU-MEDIUM.TTF" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:orientation="horizontal">


                <com.summit.cherrity.customecomponent.CustomTextView
                    style="@style/ganaral_greystyle"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ivOrder"
                    android:paddingStart="@dimen/_5sdp"
                    android:text="@string/address_lbl"
                    app:font_name="UBUNTU-MEDIUM.TTF" />


                <com.summit.cherrity.customecomponent.CustomTextView
                    android:id="@+id/row_addresslist_tvAddress"
                    style="@style/ganaral_greystyle"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ivOrder"
                    android:paddingStart="@dimen/_5sdp"
                    app:font_name="UBUNTU-MEDIUM.TTF" />


            </LinearLayout>

        </LinearLayout>

        <RadioButton
            android:id="@+id/row_addresslist_rbSelectAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:clickable="false"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>





</android.support.v7.widget.CardView>



