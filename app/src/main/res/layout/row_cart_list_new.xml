<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_cartlist_cvContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/_3sdp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/row_cartlist_ivProImg"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:orientation="vertical">

            <com.summit.service.customecomponent.CustomTextView
                android:id="@+id/row_cartlist_tvName"
                style="@style/ganaral_primarystyle"
                app:font_name="UBUNTU-BOLD.TTF" />

            <com.summit.service.customecomponent.CustomTextView
                android:id="@+id/row_cartlist_tvKg"
                style="@style/ganaral_greystyle"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp"
                app:font_name="UBUNTU-MEDIUM.TTF" />

            <com.summit.service.customecomponent.CustomTextView
                android:id="@+id/row_cartlist_tvPrice"
                style="@style/ganaral_greystyle"
                app:font_name="UBUNTU-MEDIUM.TTF" />

            <com.summit.service.customecomponent.CustomTextView
                android:id="@+id/row_cartlist_tvOldPrice"
                style="@style/ganaral_primarystyle"
                android:layout_marginBottom="@dimen/_10sdp"
                android:paddingTop="@dimen/_3sdp"
                android:textColor="@color/color_gray_light"
                app:font_name="UBUNTU-MEDIUM.TTF"
                />

        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/row_cartlist_ivDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_dustbin" />

    <RelativeLayout
        android:id="@+id/row_cartlist_rlTotalCart"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginStart="@dimen/_3sdp"
        android:gravity="end"
        android:visibility="visible">

        <ImageView
            android:id="@+id/row_cartlist_ivMins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_order_minus" />


        <com.summit.service.customecomponent.CustomTextView
            android:id="@+id/row_cartlist_tvTotalKg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/_7sdp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/_12sdp"
            app:font_name="UBUNTU-BOLD.TTF" />


        <ImageView
            android:id="@+id/row_cartlist_ivPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_order_plus" />


    </RelativeLayout>
</android.support.v7.widget.CardView>

