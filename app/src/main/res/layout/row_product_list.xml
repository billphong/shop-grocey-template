<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_productlist_cvContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/_3sdp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/row_productlist_ivProImg"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_gravity="center_horizontal"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/row_produclist_tvDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:background="@color/red_color_pdetail"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <com.summit.service.customecomponent.CustomTextView
                android:id="@+id/row_productlist_tvPrice"
                style="@style/ganaral_primarystyle"
                android:layout_gravity="center_horizontal"
                app:font_name="UBUNTU-MEDIUM.TTF" />


            <com.summit.service.customecomponent.CustomTextView
                android:id="@+id/row_productlist_tvName"
                style="@style/ganaral_greystyle"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/_5sdp"
                app:font_name="UBUNTU-MEDIUM.TTF"/>


            <com.summit.service.customecomponent.CustomTextView
                android:id="@+id/row_productlist_tvKg"
                style="@style/ganaral_primarystyle"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/color_gray_light"
                />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/signup_lable_color" />

        <com.summit.service.customecomponent.CustomTextView
            android:id="@+id/row_produclist_tvAddtoCart"
            style="@style/ganaral_primarystyle"
            android:layout_gravity="center"
            android:visibility="visible"
            android:drawablePadding="@dimen/_5sdp"
            android:gravity="center"
            android:drawableStart="@drawable/basket"
            android:padding="@dimen/_5sdp"
            android:text="@string/add_to_cart"
            android:layout_toStartOf="@+id/row_produclist_tvAddtoCart"
            app:font_name="UBUNTU-MEDIUM.TTF"/>




        <RelativeLayout
            android:id="@+id/row_produclist_rlTotalCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/_3sdp"
            android:layout_marginStart="@dimen/_3sdp">

            <ImageView
                android:id="@+id/row_productlist_ivMins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/minus" />


            <com.summit.service.customecomponent.CustomTextView
                android:id="@+id/row_productlist_tvTotalKg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                app:font_name="UBUNTU-BOLD.TTF"
               />


            <ImageView
                android:id="@+id/row_productlist_ivPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/plus" />


        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>

